@{
    ViewData["Title"] = "Home Page";
    // Layout = null; Disable layout if you want no nav/header/footer here (optional)
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Welcome - AgriEnergy</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <style>
        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
            width: 100%;
        }

        .hero-section {
            width: 100%;
            height: 100vh;
            background-image: url('/images/background.jpg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            text-align: center;
        }

        .hero-text {
            background-color: rgba(0, 0, 0, 0.5);
            padding: 30px;
            border-radius: 10px;
        }
    </style>
</head>
<body>
    <div class="hero-section">
        <div class="hero-text">
            <h1 class="display-4">Welcome to AgriEnergy</h1>
            <p class="lead">Empowering Farmers. Connecting Communities.</p>
        </div>
    </div>
</body>
</html>
