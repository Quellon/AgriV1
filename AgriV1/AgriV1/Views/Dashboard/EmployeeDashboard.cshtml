<div class="employee-background">
    <div class="container py-5">
        <h2 class="text-light mb-4">Hello Employee</h2>

        <div class="row text-center">
            <div class="col-md-4 mb-4">
                <form method="get" asp-controller="Product" asp-action="AllProducts">
                    <button type="submit" class="btn btn-info btn-lg w-100">MarketPlace</button>
                </form>
                <small class="text-light d-block mt-2">View and filter all submitted products.</small>
            </div>

            <div class="col-md-4 mb-4">
                <form method="get" asp-area="Identity" asp-page="/Account/Register">
                    <button type="submit" class="btn btn-info btn-lg w-100">Register Farmer</button>
                </form>
                <small class="text-light d-block mt-2">Add a new farmer to the system.</small>
            </div>

            <div class="col-md-4 mb-4">
                <form method="get" asp-controller="Product" asp-action="AllFarmers">
                    <button type="submit" class="btn btn-info btn-lg w-100">View All Farmers</button>
                </form>
                <small class="text-light d-block mt-2">Browse the list of all registered farmers.</small>
            </div>
        </div>
    </div>
</div>

