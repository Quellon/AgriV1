    <h2 class="mb-4">Registered Farmers</h2>

    <div class="row">
        @foreach (var farmer in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@farmer.UserName</h5>
                        <p class="card-text">
                            <strong>Email:</strong><br />
                            @farmer.Email
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>

